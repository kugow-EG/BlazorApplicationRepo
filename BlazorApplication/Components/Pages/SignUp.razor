<!-- Views/SignupView.razor -->
@page "/"
@using BlazorApplication.ViewModel
@inject SignUpViewModel ViewModel
@rendermode InteractiveServer



<h3>Signup</h3>

<div>
    <label>Username:</label>
    <input @bind="ViewModel.SignupData.Name" />
</div>
<div>
    <label>PhoneNumber:</label>
    <input type="number" @bind="ViewModel.SignupData.PhoneNumber" />
</div>
<div>
    <label>Password:</label>
    <input type="password" @bind="ViewModel.SignupData.Password" />
</div>
<div>
    <label>ConfirmPassword:</label>
    <input type="password" @bind="ViewModel.SignupData.ConfirmPassword" />
</div>

<button @onclick="ViewModel.SignupAsync">Signup</button>
